<VirtualHost *:80>
    #ServerAdmin admin@localhost.com

    ServerName <%= params["server_name"].first %>    
    
    DocumentRoot <%= params["document_root"] %>

    <Directory <%= params["document_root"] %> >
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
        
        <%= @directory_includes %>
    </Directory>
    
	LogLevel warn
    ErrorLog /var/log/httpd/<%= params["server_name"] %>.error.log
    CustomLog /var/log/httpd/<%= params["server_name"] %>.vop.access.log vop
</VirtualHost>
